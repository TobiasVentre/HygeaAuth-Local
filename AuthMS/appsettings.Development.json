{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=Autenticacion;Trusted_Connection=True;TrustServerCertificate=true;"
  },

  "SaltSettings": {
    "SaltSize": 32,
    "HashSize": 64
  },

  "Argon2Settings": {
    "DegreeOfParallelism": 8,
    "MemorySize": 8192,
    "Iterations": 40
  },

  "JwtSettings": {
    "TokenExpirationMinutes": 18000,
    "key": "dev-super-secret-key-change-me"
  },

  "RefreshTokenSettings": {
    "Lenght": 64,
    "LifeTimeInMinutes": 240,
    "IdleTimeoutMinutes": 30 //tras X min sin usar el refresh token, expira
  },

  "LockoutSettings": {
    "MaxFailedAccessAttempts": 5,
    "LockoutDurationMinutes": 15
  }
}
